{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "before 4am on the first day of the month"
  ],
  "packageRules": [
    {
      "groupName": "all-dependencies",
      "matchManagers": ["cargo", "github-actions"],
      "matchPackageNames": ["*"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupSlug": "all-deps"
    }
  ],
  "reviewers": [
    "kyu08"
  ]
}
